<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_notification_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">

<div class="row">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date_opened) %></th>
      <th><%= model_class.human_attribute_name(:host) %></th>
      <th><%= model_class.human_attribute_name(:service) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
    </tr>
  </thead>
  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= link_to notification.date_opened.strftime('%a %e %b %T %Y %Z'), notification_path(notification) %></td>
        <td><%= notification.host %></td>
        <td><%= notification.service %></td>
        <td><%= button_tag notification.state, class: "btn btn-#{notification.state.value} btn-xs "%></td>
      </tr>
      <tr>
        <th colspan="2">
          <%= simple_form_for notification, :html => { :class => 'form-horizontal' } do |f| %>
            <%= f.input :tag, collection: Notification::TAG %>
          <% end %>
        </th>
        <th colspan="2"><%= model_class.human_attribute_name(:notes) %>
          <p><%= notification.notes %></p></th>
      </tr>
    <% end %>
  </tbody>
</div>
</table>

