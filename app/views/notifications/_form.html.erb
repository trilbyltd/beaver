<%= simple_form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date_opened %>
  <%= f.input :date_closed %>
  <%= f.input :host %>
  <%= f.input :service %>
  <p>Things like Disk Space, Host Check, Memory, Backup, etc </p>
  <%= f.select :state, Notification::STATE %>
  <%= f.select :tag, Notification::TAG %>
  <%= f.input :notes, input_html: { class: 'wysihtml5' } %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn btn-default' %>
<% end %>
